@model IEnumerable<HebbraCo_Lib.BusinessUnit>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.businessUnitCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.businessUnitCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.businessUnitId }) |
            @Html.ActionLink("Details", "Details", new { id=item.businessUnitId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.businessUnitId }) |
            @Html.ActionLink("Staff", "StaffBBU", "Staff", new { id = item.businessUnitId }, null)
        </td>
    </tr>
}

</table>
